{
    "manifest_version": 3,
    "name": "LetterboxdEnchancer",
    "description": "Enhances the Letterboxd site with a range of useful quality-of-life improvements for a cleaner, more focused experience.",
    "version": "1.1.2",
    "icons": {
        "16": "assets/16.png",
        "32": "assets/32.png",
        "48": "assets/48.png",
        "128": "assets/128.png"
    },
    "action": {
        "default_popup": "settings.html",
        "default_icon": {
            "16": "assets/16.png",
            "32": "assets/32.png",
            "48": "assets/48.png",
            "128": "assets/128.png"
        }
    },
    "content_scripts": [{
        "js": [
            "hide-rating.js",
            "passive.js"
        ],
        "matches": [
            "https://*.letterboxd.com/*"
        ]
    }]
}